@model IEnumerable<BloodDonationProject.Models.userInfo>

<head>
    <link href="@Url.Content("~/Content/main.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <h2>Donner Info</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProPic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BloodGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isVerified)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DOB)
                </td>
                <td>
                    <img src="~/Content/Images/@item.ProPic" alt="proPic" height="80px" width="80px" style="margin:05px 25px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BloodGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isVerified)
                </td>

                <td>
                    @*@Html.ActionLink("Varify", "DonnerVarify", new { id = item.userID })*@

                    <a href="@Url.Action("DonnerVarify", "Admin", new { id = item.userID })">
                        @(item.isVerified == "yes" ? "CancleVerified" : "Verify")
                    </a>

                </td>
            </tr>
            <div style="margin: 0px 550px; position:absolute; top:22%; text-align:center">
                <h3>Docoment</h3>
              @*  <img src="~/Content/DocImage/@item.Docoment" alt="proPic" height="420px" width="400px" style="margin:05px 25px" />*@
                <embed src="~/Content/Doc/@item.Docoment" width="800px" height="800px" />
            </div>


         

        }

    </table>

</body>